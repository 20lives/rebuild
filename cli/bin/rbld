#!/usr/bin/env ruby

require 'pp'
require 'require_all'

require_rel '../lib'
require_rel '../lib/commands'

begin

  rbld_log.info( "ARGV: #{ARGV.join(' ')}" )

  if !ARGV[0] || (ARGV[0] == "help" && !ARGV[1])
    puts Rebuild::CLI::Main.usage
    puts
    exit 0
  end

  if ARGV[0] == "help"
    Rebuild::CLI::Commands.usage( ARGV[1] )
    exit 0
  end

  if ARGV[1] == "--help" || ARGV[1] == "-h"
    Rebuild::CLI::Commands.usage( ARGV[0] )
    exit 0
  end

  Rebuild::CLI::Commands.run( ARGV[0], ARGV.drop(1) )
  exit 0

rescue Rebuild::CLI::CommandError => error
  exit error.code

rescue RuntimeError => msg
  rbld_print.error(msg)
  exit 1
end
